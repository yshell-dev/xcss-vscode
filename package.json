{
  "name": "xcss",
  "displayName": "XCSS Client",
  "description": "Extension bundle for XCSS",
  "version": "0.1.6",
  "publisher": "yshelldev",
  "author": {
    "name": "Vyshnav Prasad",
    "email": "official@yshell.dev"
  },
  "homepage": "https://www.xcss.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/yshelldev/xcss-vscode"
  },
  "bugs": {
    "url": "https://github.com/yshelldev/xcss-vscode/issues"
  },
  "scripts": {
    "lint": "eslint ./typescript --ext .ts",
    "init": "npm install -g typescript @vscode/vsce && npm install && node package/package.js",
    "tsbuild": "npx tsc -p ./typescript",
    "package": "npm run init && npm run tsbuild && npm install --omit=dev && vsce package"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/node": "^22.18.11",
    "@types/vscode": "^1.51.0",
    "@types/ws": "^8.18.1",
    "esbuild": "^0.25.8",
    "eslint": "^9.13.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.26.0"
  },
  "dependencies": {
    "vscode-css-languageservice": "^6.3.5",
    "ws": "^8.18.3"
  },
  "license": "MIT",
  "type": "commonjs",
  "main": "./extension/activate.js",
  "icon": "./logo.png",
  "galleryBanner": {
    "color": "#171b22",
    "theme": "dark"
  },
  "categories": [
    "Keymaps",
    "Snippets",
    "Language Packs",
    "Extension Packs",
    "Other"
  ],
  "extensionKind": [
    "workspace"
  ],
  "keywords": [
    "css",
    "xcss",
    "toolkit",
    "stylesheet",
    "intellisense",
    "autocomplete",
    "formatting",
    "extension"
  ],
  "engines": {
    "vscode": "^1.51.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "xcss",
      "properties": {
        "xcss.request.interval": {
          "type": "number",
          "default": 400,
          "description": "Increase Request Interval in Case of Performance issues, (min 200)."
        },
        "xcss.decoration.attribute": {
          "type": "string",
          "default": "#f57970",
          "description": "Color for tag attribute. Restart extension to take effect."
        },
        "xcss.intellisense.mode": {
          "type": "boolean",
          "default": true,
          "description": "Symclass suggestions can smart(true) or simple(false)"
        },
        "xcss.development.autostart": {
          "type": "boolean",
          "default": true,
          "description": "Incase of server faliure, auto-start another instance."
        },
        "xcss.decoration.comment": {
          "type": "string",
          "default": "#ffbe88bb",
          "description": "Color for attribute comment value. Restart extension to take effect."
        },
        "xcss.decoration.property": {
          "type": "string",
          "default": "#ffe1a1",
          "description": "Color for css properties in tag value. Restart extension to take effect."
        },
        "xcss.decoration.value": {
          "type": "string",
          "default": "#f7b787",
          "description": "Color for tag value. Restart extension to take effect."
        },
        "xcss.providers.palette": {
          "type": "boolean",
          "default": false,
          "description": "Color provider scope. (Targeted: false, Global: true)",
          "tags": [
            "experimental"
          ]
        }
      }
    },
    "languages": [
      {
        "id": "markdown",
        "aliases": [
          "XCSS"
        ],
        "extensions": [
          ".xcss"
        ]
      }
    ],
    "commands": [
      {
        "command": "xcss.editor.summon",
        "title": "Summon Structure after Tag",
        "category": "XCSS Editor"
      },
      {
        "command": "xcss.editor.format",
        "title": "Format XCSS Attribute Blocks in Active Editor",
        "category": "XCSS Editor"
      },
      {
        "command": "xcss.action.compview",
        "title": "Toggle Preview of Symclass",
        "category": "XCSS Action"
      },
      {
        "command": "xcss.action.toggle",
        "title": "Toggle b/w Source and Target Files",
        "category": "XCSS Action"
      },
      {
        "command": "xcss.action.command",
        "title": "Core Commands on Terminal.",
        "category": "XCSS Action"
      },
      {
        "command": "xcss.server.pause",
        "title": "Pause Activity",
        "category": "XCSS Server"
      },
      {
        "command": "xcss.server.restart",
        "title": "Restart",
        "category": "XCSS Server"
      },
      {
        "command": "xcss.server.send",
        "title": "Interactive",
        "category": "XCSS Server"
      }
    ],
    "keybindings": [
      {
        "key": "alt+x",
        "command": "xcss.editor.summon",
        "when": "editorFocus"
      },
      {
        "key": "alt+shift+x",
        "command": "xcss.editor.format",
        "when": "editorFocus"
      },
      {
        "key": "alt+ctrl+x",
        "command": "xcss.action.compview",
        "when": "editorFocus"
      },
      {
        "key": "ctrl+alt+shift+x",
        "command": "xcss.action.toggle",
        "when": "editorFocus"
      }
    ],
    "css": {
      "customData": [
        "./css.json"
      ]
    }
  }
}